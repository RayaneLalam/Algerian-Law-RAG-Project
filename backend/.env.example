FLASK_ENV=development
FLASK_DEBUG=true

SECRET_KEY=your-secret-key-here
JWT_SECRET=your-jwt-secret-here
JWT_ACCESS_TOKEN_EXPIRES=3600

DATABASE=./database.db
JSON_AS_ASCII=false

FRENCH_INDEX_PATH=./data/faiss/algerian_legal(jo+constitution+penale+civil+commerce+famille) embedder_ dangvantuan-sentence-camembert-large.faiss
FRENCH_DOCS_PATH=./data/faiss/algerian_legal(jo+constitution+penale+civil+commerce+famille) embedder_ dangvantuan-sentence-camembert-large_docs.json
ARABIC_INDEX_PATH=./data/faiss/laws_ar.index
ARABIC_META_PATH=./data/faiss/laws_ar.index.meta

USE_LOCAL_LLMS=false
FRENCH_LLM_MODEL=bofenghuang/vigogne-2-7b-chat
ARABIC_LLM_MODEL=Qwen/Qwen2.5-7B-Instruct

# API Keys for LLM Inference via OpenRouter
DEEPSEEK_API_KEY=sk-or-v1-your-api-key-here
OPENROUTER_API_KEY=sk-or-v1-your-api-key-here
DEFAULT_LLM_MODEL=google/gemma-3-27b-it:free

USE_4BIT_QUANTIZATION=true
TOP_K_RETRIEVAL=3
MAX_NEW_TOKENS_FR=512
MAX_NEW_TOKENS_AR=1024
LLM_TEMPERATURE=0.7

DEVICE=auto
